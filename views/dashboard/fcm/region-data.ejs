<%- include('./layouts/header') %>
<div class="main">
  <div class="topbar">
    <div class="toggle">
      <ion-icon name="menu-outline"></ion-icon>
    </div>
    <div class="button-group">
      <!--<button> <a href="/fcm/expenses">Expenses Home</a></button> -->
      
    </div>
    <div class="user">
      <img src="/assets/images/user.png" alt="User Image">
      <div class="dropdown">
        <div class="dropdown-header">
          <h3><%= user.name %></h3>
          <p>FCM</p>
        </div>
        <div class="dropdown-links">
          <a href="/user/profile"><i class="fa fa-home"></i>Profile</a>
          <a href="/fcm/settings"><i class="fa fa-cogs"></i>Settings</a>
        </div>
        <div class="dropdown-footer">
          <a href="/auth/logout">Logout</a>
        </div>
      </div>
    </div>
    
  </div>
  <%- include('./layouts/flash-message')%>
  <div class="container">
      
    <h1 class="section-header">Region Data</h1>
    <div class="cardcontent">
      <% if (regions.length === 0) { %>
        <p>No regions found.</p>
      <% } else { %>
        <% regions.forEach(region => { %>
          
          <div class="card">
            <div class="card-caption">
             Region Data
            </div>
            <div class="card-heading"><%= region.region %></div>
            <div class="card-footer">
              <div class="card-footer-content">
                <a href="/fcm/region-data/<%= region.region %>">View</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
    
  </div>


  <%- include('./layouts/footer')%>
