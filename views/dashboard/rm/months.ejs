
  <%- include('./layouts/header') %>
<div class="main">

    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>

        <div class="button-group">
          <!--<button> <a href="/adm/expenses-data">My Expenses</a></button>-->
          <button> <a href="/rm/my-expenses">My Expenses</a></button>
          
        </div>
        <div class="user">
          <img src="/assets/images/user.png" alt="User Image">
          <div class="dropdown">
            <div class="dropdown-header">
              <h3><%= user.name %></h3>
              <p style="text-transform: capitalize;"><%= user.region %></p>
            </div>
            <div class="dropdown-links">
              <a href="/user/profile"><ion-icon name="person-circle-outline"></ion-icon> &nbsp; Profile</a>
              <a href="/rm/settings"><ion-icon name="settings-outline"></ion-icon> &nbsp; Settings</a>
            </div>
            <div class="dropdown-footer">
              <a href="/auth/logout">Logout</a>
            </div>
          </div>
        </div>
    </div>
    <br><br><br>
    <nav class="breadcrumbs">
      <a href="/rm/my-expenses" class="breadcrumbs__item">My Expenses</a>
      <a href="#" class="breadcrumbs__item is-active"><%= year %></a> 
  </nav>
    <div class="container">
        <h1 class="section-header">Months with expenses for <%= userRegion %> in <%= year %></h1>
        <div class="cardcontent">
          <% if (months.length === 0) { %>
            <p>No expenses entered for <%= year %>.</p>
          <% } else { %>
            <% months.forEach(month => { %>
                <div class="card">
                    <div class="card-caption"></div>
                    <div class="card-heading"> 
                      <%= new Date(year, month.split('-')[0] - 1).toLocaleString('default', { month: 'long' }) %> <%= year %>
                    </div>
                    
                    <div class="card-footer">
                      <div class="card-footer-content">
                        <a href="/rm/my-expenses/<%= year %>/<%= month %>">View</a>
                      </div>
                    </div>
                  </div>
            <% }) %>
          <% } %>
        </div>
      </div>
</div>
<%- include('./layouts/footer') %>
  

