<%- include('./layouts/header') %>
 

  <section data-bs-version="5.1" class="team1 cid-tCZ0zfd3vG" id="team1-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-lg-4">
                <div class="card-wrap">
                    <div class="image-wrap">
                        <img src="/assets/images/mbr-696x696.png" alt="profile picture">
                    </div>
                    <div class="content-wrap">
                        <h5 class="mbr-section-title card-title mbr-fonts-style align-center m-0 display-5">
                          <strong><%= person.name.toUpperCase() %></strong>

                        </h5>
                        
                        <% if(person.role === 'REGION_MANAGER') { %> 
                          <p class="mbr-role mbr-fonts-style align-center mb-3 display-7">
                            <strong><%= person.role %><br><%= person.region %></strong>
                          </p>
                        <% } else { %>
                          <p class="mbr-role mbr-fonts-style align-center mb-3 display-7">
                            <strong><%= person.role %></strong>
                        </p>
                        <% } %>

                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-8">
                <div class="card-wrap">
                  <div class="content-wrap">
                    <h5 class="mbr-section-title card-address mbr-fonts-style m-0 display-5">
                        <strong>Personal Details</strong>
                    </h5><div class="new">
                      <div class="new-sm red"></div>
                      <div class="new-sm orange"></div>
                      <div class="new-sm yellow "></div>
                      <div class="new-sm green "></div>
                      <div class="new-sm blue "></div>
                      <div class="new-sm purple"></div>
                    </div>
                    <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                        <strong>Email:&nbsp;&nbsp;<%= person.email %></strong>
                    </p>
                    <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                        <strong>Phone:&nbsp;&nbsp;<%= person.phoneNumber %></strong>
                    </p>
                    <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                        <strong id="address">Address:&nbsp;&nbsp;<%= person.address.replace(/,/g, ',<br>') %></strong>
                    </p>
                   
                </div>
                </div><br>
                <% if(person.role === 'REGION_MANAGER') { %>
                <div class="card-wrap">
                    <div class="content-wrap">
                        <h5 class="mbr-section-title card-address mbr-fonts-style m-0 display-5">
                            <strong>Region Address</strong>
                        </h5>
                        <div class="new">
                          <div class="new-sm red"></div>
                          <div class="new-sm orange"></div>
                          <div class="new-sm yellow "></div>
                          <div class="new-sm green "></div>
                          <div class="new-sm blue "></div>
                          <div class="new-sm purple"></div>
                        </div>
                        <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                            <strong>Region Email:&nbsp;&nbsp;<%= person.regionEmail %></strong>
                        </p>
                        <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                            <strong>Phone:&nbsp;&nbsp;<%= person.regionPhone %></strong>
                        </p>
                        <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                            <strong id="regionAddress">Address:&nbsp;&nbsp;<%= person.regionAddress.replace(/,/g, ',<br>') %></strong>
                        </p>
                       
                    </div>
                </div>
                <% } else { %>
                  <div class="card-wrap">
                    <div class="content-wrap">
                        <h5 class="mbr-section-title card-address mbr-fonts-style m-0 display-5">
                            <strong>Office Address</strong>
                        </h5>
                        <div class="new">
                          <div class="new-sm red"></div>
                          <div class="new-sm orange"></div>
                          <div class="new-sm yellow "></div>
                          <div class="new-sm green "></div>
                          <div class="new-sm blue "></div>
                          <div class="new-sm purple"></div>
                        </div>
                        <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                            <strong>Hadia CSE</strong>
                        </p>
                        <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                            <strong>Panakkad<br>Pattarkadavu P.O<br>Malappuram<br>Kerala, India-676 519</strong>
                        </p>
                        <p class="mbr-role card-details mbr-fonts-style mb-3 display-7">
                            <strong>Phone: &nbsp;&nbsp;+91 483 283 7000</strong>
                        </p>
                        
                       
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <script>
      const address = '<%= person.address %>';
      const formattedAddress = address.replace(/,/g, ',<br>');
      document.querySelector('#address').innerHTML = formattedAddress;

      const regionAddress = '<%= person.regionAddress %>';
      const formattedRegionAddress = regionAddress.replace(/,/g, ',<br>');
      document.querySelector('#regionAddress').innerHTML = formattedRegionAddress;
    </script>
  </section>
  <%- include('./layouts/footer') %>