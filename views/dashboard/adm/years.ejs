<%- include('./layouts/header') %>
<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>
        <div class="button-group">
          <button> <a href="/adm/expenses">Verify Expenses</a></button>
          
        </div>
        <div class="user">
          <img src="/assets/images/user.png" alt="User Image">
          <div class="dropdown">
            <div class="dropdown-header">
              <h3><%= user.name %></h3>
              <p>Administrator</p>
            </div>
            <div class="dropdown-links">
              <a href="/user/profile"><ion-icon name="person-circle-outline"></ion-icon> &nbsp; Profile</a>
              <a href="/adm/settings"><ion-icon name="settings-outline"></ion-icon> &nbsp; Settings</a>
            </div>
            <div class="dropdown-footer">
              <a href="/auth/logout">Logout</a>
            </div>
          </div>
      </div>
    </div>
        <div class="container">
            <h1 class="section-header">Expenses in Years</h1>
            <div class="cardcontent">
                <% years.forEach(year => { %>
                <div class="card">
                  <div class="card-verified-count"></div>
                  <div class="card-caption">Expenses</div>
                  <div class="card-heading" style="font-size : 60px;"><%= year%></div>
                  <div class="card-footer">
                    <div class="card-footer-content">
                      <a href="/adm/expenses-data/<%= year %>">View</a>
                    </div>
                  </div>
                </div>
                <% }); %>
          </div>
            </div>
  
</div>
  <%- include('./layouts/footer') %>